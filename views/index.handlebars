<h1>Burgers!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <l1>{{burger_name}}
    <form class="devour-form" data="{{id}}">
      <input type="hidden" name="devoured" value="true">
      <button type="submit">Devoured!</button>
    </form>
  </l1>
  {{/unless}}
  {{/each}}

</ul>
<h2>Burgers that are devoured!</h2>
<ul>
  {{#each burgers}}
  {{#if devoured}}  
  <h1>{{burger_name}}</h1>
  {{/if}}
  {{/each}}
</ul>


<h2>Add a burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>


<script>
  $(".create-form").on("submit", function (event) {
    event.preventDefault();

    // make a newCharacter obj
    var burger = {
      // name from name input
      name: $("#bu").val().trim()
    };

    // send an AJAX POST-request with jQuery
    console.log(burger);
    $.post("/api/burgers", burger)

      // on success, run this callback
      .then(function (data) {
        // log the data we found
        console.log(burger);
        // tell the user we're adding a character with an alert window
        location.reload();
      });

    // empty each input box by replacing the value with an empty string
    $("#bu").val("");
  });
  $(".devour-form").on("submit", function (event) {
    event.preventDefault();
    var id = $(this).attr('data');
    console.log(id);

    //send th4e POST request.
    $.ajax("/api/burgers/" + id, {
      type: "PUT"
    }).then(
      function () {
        console.log("changed burger");
        location.reload();
      }
    );
  });



</script>